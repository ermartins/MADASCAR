$(document).ready(function() {
	resizeScreen();
})

$(window).on('resize', resizeScreen)

function resizeScreen() {
	var win = $(this);
	if (win.width() > 660) {
		$(".cl_Login").css("width", "510px")
	} else {
		$(".cl_Login").css("width", "210px")
	}
	$('.cl_CampoVazio').toggleClass();
	$('.cl_Login').css("float", "right");
}